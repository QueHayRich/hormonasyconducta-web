---
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png';

const quickLinks = [
  { label: 'Inicio', href: '/' },
  { label: 'Investigación', href: '/research' },
  { label: 'Publicaciones', href: '/blog' },
  { label: 'Equipo', href: '/team' },
  { label: 'Contacto', href: '/contacto' }
];

const researchAreas = [
  { label: 'Neurobiología', href: '/research/neurobiology' },
  { label: 'Hormonas y Cognición', href: '/research/hormones-cognition' },
  { label: 'Química Teorica', href: '/research/neuroimaging' },
  { label: 'Nanotecnología', href: '/research/animal-models' }
];
---

<footer class="relative bg-gradient-to-r from-slate-900 via-blue-950 to-indigo-900 text-white">
  <!-- Patrón de fondo sutil -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25px 25px, rgba(255,255,255,0.1) 2px, transparent 0), radial-gradient(circle at 75px 75px, rgba(255,255,255,0.1) 2px, transparent 0); background-size: 100px 100px;"></div>
  </div>
  
  <div class="relative z-10 container mx-auto px-4 py-12">
    
    <!-- Sección principal horizontal -->
    <div class="flex flex-col lg:flex-row items-center justify-between gap-8 mb-8">
      
      <!-- Logo y info del laboratorio -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full blur opacity-30"></div>
          <Image 
            src={logoImg} 
            alt="Logo Laboratorio Hormonas y Conducta" 
            class="relative rounded-full ring-2 ring-blue-400/30"
            width={48}
            height={48}
          />
        </div>
        <div class="text-center lg:text-left">
          <h3 class="font-bold text-xl text-blue-100 mb-1">Laboratorio de Hormonas y Conducta</h3>
          <div class="text-blue-300 text-sm space-y-1">
            <p class="font-medium">Escuela Nacional de Ciencias Biológicas</p>
            <p class="font-medium">Instituto Politécnico Nacional</p>
          </div>
        </div>
      </div>
      
      <!-- Enlaces de navegación en horizontal -->
      <div class="flex flex-wrap justify-center gap-6 lg:gap-8">
        {quickLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-sm text-blue-200 hover:text-white transition-all duration-300 relative group"
          >
            <span class="relative z-10">{link.label}</span>
            <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-400 group-hover:w-full transition-all duration-300"></div>
          </a>
        ))}
      </div>
      
      <!-- Redes sociales -->
      <div class="flex items-center space-x-4">
        <span class="text-blue-300 text-xs hidden lg:block">Síguenos:</span>
        <div class="flex space-x-3">
          <a 
            href="https://www.researchgate.net/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-9 h-9 bg-blue-800/30 rounded-full flex items-center justify-center hover:bg-blue-600/50 transition-all duration-300 group"
          >
            <svg class="w-4 h-4 text-blue-300 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.586 0H4.414A4.414 4.414 0 000 4.414v15.172A4.414 4.414 0 004.414 24h15.172A4.414 4.414 0 0024 19.586V4.414A4.414 4.414 0 0019.586 0zM8.063 18.944H5.344V9.647h2.719v9.297zM6.703 8.461h-.018a1.42 1.42 0 01-1.496-1.42c0-.806.623-1.42 1.514-1.42.891 0 1.496.614 1.514 1.42 0 .806-.623 1.42-1.514 1.42zM20.656 18.944h-2.719v-4.97c0-1.099-.393-1.849-1.378-1.849-.751 0-1.198.506-1.394 1.001-.072.174-.09.417-.09.661v5.157h-2.719s.036-8.369 0-9.297h2.719v1.317c.361-.558 1.008-1.353 2.45-1.353 1.789 0 3.131 1.169 3.131 3.681v5.652z"/>
            </svg>
          </a>
          <a 
            href="https://orcid.org/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-9 h-9 bg-green-800/30 rounded-full flex items-center justify-center hover:bg-green-600/50 transition-all duration-300 group"
          >
            <svg class="w-4 h-4 text-green-300 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947 0 .525-.422.947-.947.947a.946.946 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.016-5.325 5.016h-3.919V7.416zm1.444 1.303v7.444h2.297c2.359 0 3.588-1.444 3.588-3.722 0-2.016-1.091-3.722-3.588-3.722h-2.297z"/>
            </svg>
          </a>
          <a 
            href="https://twitter.com/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-9 h-9 bg-blue-800/30 rounded-full flex items-center justify-center hover:bg-blue-500/50 transition-all duration-300 group"
          >
            <svg class="w-4 h-4 text-blue-300 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Líneas de áreas de investigación -->
    <div class="border-t border-blue-800/30 pt-6 mb-6">
      <div class="flex flex-wrap justify-center gap-4 lg:gap-6">
        <span class="text-blue-400 text-xs font-medium uppercase tracking-wider">Áreas de investigación:</span>
        {researchAreas.map((area, index) => (
          <span class="flex items-center">
            <a 
              href={area.href} 
              class="text-xs text-blue-300 hover:text-blue-100 transition-colors duration-200"
            >
              {area.label}
            </a>
            {index < researchAreas.length - 1 && (
              <span class="mx-2 text-blue-600">•</span>
            )}
          </span>
        ))}
      </div>
    </div>
    
    <!-- Footer inferior -->
    <div class="border-t border-blue-800/20 pt-6 flex flex-col md:flex-row justify-between items-center text-xs text-blue-300">
      <div class="flex flex-col md:flex-row items-center gap-2 md:gap-4 mb-4 md:mb-0">
        <p>&copy; 2025 Laboratorio Hormonas y Conducta</p>
        <span class="hidden md:inline text-blue-600">•</span>
        <p>Instituto Politécnico Nacional</p>
        <span class="hidden md:inline text-blue-600">•</span>
        <p>Todos los derechos reservados</p>
      </div>
      
      <!-- Crédito del desarrollador -->
      <div class="flex items-center gap-2 text-xs">
        <span class="text-blue-400">Desarrollado por</span>
        <div class="flex items-center gap-1 bg-gradient-to-r from-blue-500/10 to-purple-500/10 px-3 py-1 rounded-full border border-blue-500/20">
          <div class="w-2 h-2 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full animate-pulse"></div>
          <span class="font-medium text-blue-200">Richie</span>
        </div>
      </div>
    </div>
  </div>
</footer>
